<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jasrsir.ejerhtmlacdat.MainActivity">

    <Button
        android:text="@string/btnConHttp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnConAsin"
        android:layout_centerHorizontal="true"
        android:onClick="getOnClick"
        android:layout_marginTop="40dp"
        android:id="@+id/btnConHttp" />

    <Button
        android:text="@string/btnConAsin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/btnConAsin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:onClick="getOnClick"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Lectura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLect"
        android:layout_centerVertical="true"
        android:onClick="getOnClick"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="CodificaciÃ³n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCodi"
        android:onClick="getOnClick"
        android:layout_below="@+id/btnLect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:text="Explorar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnExp"
        android:onClick="getOnClick"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btnCodi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
